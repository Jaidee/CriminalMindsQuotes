<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="CriminalMindsQuotes.Pages.EpisodeQuotesPage"
             Title="Quotes">
    
    <ContentPage.Icon>
        <OnPlatform x:TypeArguments="FileImageSource">
            <On Platform="iOS" Value="ic_format_quote.png"/> 
        </OnPlatform>   
    </ContentPage.Icon>

    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <StackLayout >
                <Label x:Name="Quote1Text" Text="" />
                <Label x:Name="Quote1Author" Text="" HorizontalOptions="End" 
                       FontSize="Small" FontAttributes="Italic"/>
                <Label x:Name="Quote1QuotedBy" Text="" 
                        FontSize="Small" FontAttributes="Italic"/>
            </StackLayout>
            <StackLayout Margin="0,20">
                <Label x:Name="Quote2Text" Text="" />
                <Label x:Name="Quote2Author" Text="" HorizontalOptions="End" 
                       FontSize="Small" FontAttributes="Italic"/>
                <Label x:Name="Quote2QuotedBy" Text="" 
                        FontSize="Small" FontAttributes="Italic"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
